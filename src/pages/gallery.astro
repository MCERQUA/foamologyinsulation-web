---
import BaseLayout from '../layouts/BaseLayout.astro';
import GalleryGrid from '../components/ui/GalleryGrid.tsx';
import { galleryImages } from '../data/gallery-images.ts';
---

<BaseLayout
  title="Project Gallery Anchorage AK"
  description="View our completed spray foam insulation projects in Anchorage, Alaska. Professional insulation installation showcasing quality workmanship and results."
>
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center overflow-hidden">
    <!-- Background with gradient -->
    <div
      class="absolute inset-0 z-0"
      style="background-image: url('/images/hero2.jpg'); background-size: cover; background-position: center;"
    >
      <div class="absolute inset-0 bg-gradient-to-br from-charcoal/60 via-charcoal/40 to-charcoal/60"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-charcoal/70 via-transparent to-transparent"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 w-full px-6 md:px-12 lg:px-16 py-24">
      <div class="max-w-4xl mx-auto text-center">
        <h1
          class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 text-soft-white animate-fade-in"
          style="text-shadow: 4px 4px 12px rgba(0, 0, 0, 0.8), 0 0 30px rgba(0, 0, 0, 0.6);"
        >
          Project Gallery
        </h1>
        <p
          class="text-xl sm:text-2xl text-soft-white/90 mb-8 max-w-2xl mx-auto font-medium"
          style="text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.7), 0 0 25px rgba(0, 0, 0, 0.5);"
        >
          Quality insulation work showcasing our expertise in Alaska's extreme climate
        </p>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-16 sm:py-20 lg:py-24 px-6 md:px-12 lg:px-16 bg-cream">
    <div class="max-w-7xl mx-auto">
      <!-- Introduction -->
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-espresso mb-6">
          Our Work in Action
        </h2>
        <p class="text-lg text-espresso/70 leading-relaxed">
          Browse through our completed projects showcasing professional spray foam insulation,
          ice dam prevention solutions, and thermal inspection results. Each project represents
          our commitment to quality and customer satisfaction in Anchorage and surrounding areas.
        </p>
      </div>

      <!-- Gallery Component -->
      <GalleryGrid
        images={galleryImages}
        columns={3}
        client:visible
      />

      <!-- Call to Action -->
      <div class="mt-16 text-center">
        <div
          class="inline-block rounded-3xl p-8 sm:p-10 max-w-2xl mx-auto"
          style="
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            box-shadow: 0 8px 32px rgba(74, 63, 54, 0.08);
            border: 1px solid rgba(200, 184, 158, 0.2);
          "
        >
          <h3 class="text-2xl sm:text-3xl font-bold text-espresso mb-4">
            Ready to Start Your Project?
          </h3>
          <p class="text-espresso/70 mb-6 text-lg">
            Get a free estimate and join our growing list of satisfied customers in Anchorage.
          </p>
          <a
            href="/about#contact-form"
            class="inline-block px-10 py-4 bg-terra-cotta/60 text-white font-semibold rounded-full
                   transition-all duration-300 transform hover:-translate-y-1 hover:scale-105
                   backdrop-blur-md border border-terra-cotta/20 shadow-lg hover:shadow-xl"
            style="
              filter: drop-shadow(0 0 20px rgba(123, 167, 217, 0.4));
              box-shadow: 0 0 30px rgba(123, 167, 217, 0.3);
            "
          >
            Get Free Estimate
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="py-12 px-6 md:px-12 bg-gradient-to-b from-cream to-sand">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-terra-cotta mb-2">500+</div>
          <div class="text-espresso/70">Projects Completed</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-terra-cotta mb-2">100%</div>
          <div class="text-espresso/70">Licensed & Insured</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-terra-cotta mb-2">15+</div>
          <div class="text-espresso/70">Years Experience</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

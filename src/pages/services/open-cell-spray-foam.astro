---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GlassButton from '../../components/ui/GlassButton.tsx';

const serviceFeatures = [
  {
    title: 'Superior Sound Control',
    description: 'Excellent sound dampening properties for acoustical applications',
    benefits: ['Reduces noise transmission', 'Absorbs sound waves', 'Improves acoustics']
  },
  {
    title: 'Breathable & Flexible',
    description: 'Semi-permeable foam allows moisture vapor transmission',
    benefits: ['Prevents trapped moisture', 'Accommodates movement', 'Reduces cracking']
  },
  {
    title: 'Cost Effective',
    description: 'Lower material cost per square foot than closed cell',
    benefits: ['Budget-friendly option', 'Covers more area', 'Good R-value per dollar']
  },
  {
    title: 'Easy Application',
    description: 'Easier to trim and work with after curing',
    benefits: ['Simple trimming', 'Easy to route wires', 'Contractor friendly']
  }
];

const applications = [
  {
    title: 'Interior Wall Soundproofing',
    description: 'Perfect for reducing sound transmission between rooms',
    image: '/gallery/webp/anchorage-open-stud-bay-spray-foam-1.webp',
    idealFor: ['Between bedrooms', 'Home theater walls', 'Office partitions', 'Music practice rooms']
  },
  {
    title: 'Interior Ceiling Applications',
    description: 'Sound control for multi-story buildings',
    image: '/gallery/webp/anchorage-ceiling-spray-foam-application-1.webp',
    idealFor: ['Second floor ceilings', 'Apartment buildings', 'Condo units', 'Multi-family homes']
  },
  {
    title: 'Acoustic Treatment',
    description: 'Professional sound dampening for specialized spaces',
    image: '/gallery/webp/anchorage-wall-cavity-spray-foam-insulation-1.webp',
    idealFor: ['Recording studios', 'Home theaters', 'Conference rooms', 'Performance spaces']
  }
];

const comparisonPoints = [
  {
    feature: 'R-Value per Inch',
    openCell: 'R-3.5 to R-4.0',
    closedCell: 'R-6.0 to R-7.0',
    winner: 'closed'
  },
  {
    feature: 'Sound Dampening',
    openCell: 'Excellent',
    closedCell: 'Good',
    winner: 'open'
  },
  {
    feature: 'Vapor Barrier',
    openCell: 'No - Requires Separate',
    closedCell: 'Yes - Built-in',
    winner: 'closed'
  },
  {
    feature: 'Cost per Square Foot',
    openCell: 'Lower',
    closedCell: 'Higher',
    winner: 'open'
  },
  {
    feature: 'Alaska Exterior Use',
    openCell: 'Not Recommended',
    closedCell: 'Highly Recommended',
    winner: 'closed'
  },
  {
    feature: 'Flexibility',
    openCell: 'Very Flexible',
    closedCell: 'Rigid',
    winner: 'open'
  }
];

const faqs = [
  {
    question: 'What is open cell spray foam best for?',
    answer: 'Open cell foam excels at interior soundproofing applications where acoustic control is the primary goal. It\'s perfect for walls between rooms, home theaters, recording studios, and multi-family buildings where noise reduction is important.'
  },
  {
    question: 'Can open cell foam be used in Alaska attics?',
    answer: 'Open cell foam is NOT recommended for Alaska attics or exterior applications. It lacks the vapor barrier properties needed in our extreme climate and requires a separate vapor barrier that\'s difficult to install properly. We recommend closed cell foam for all Alaska exterior and attic applications.'
  },
  {
    question: 'Does open cell foam prevent air leakage?',
    answer: 'Yes, open cell foam provides excellent air sealing, similar to closed cell. However, it does NOT provide a vapor barrier, which is critical in Alaska\'s climate for preventing moisture issues.'
  },
  {
    question: 'Why is open cell foam cheaper?',
    answer: 'Open cell foam uses less material per square foot and expands more during application, covering a larger area with the same amount of product. This makes it more cost-effective for interior soundproofing applications.'
  },
  {
    question: 'Can I use open cell foam in my basement?',
    answer: 'In Alaska, we do NOT recommend open cell foam for basements or crawl spaces due to moisture concerns. These areas require the vapor barrier protection that only closed cell foam provides.'
  }
];
---

<BaseLayout
  title="Open Cell Spray Foam Insulation Anchorage Alaska - Interior Soundproofing"
  description="Open cell spray foam insulation for interior soundproofing in Anchorage, AK. Excellent acoustic control for walls, ceilings, home theaters. Professional installation by Alaska insulation experts."
  keywords="open cell spray foam Anchorage, soundproofing insulation Alaska, acoustic insulation Anchorage, interior wall insulation, sound dampening Alaska, home theater insulation"
>
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden pt-24 pb-12">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="/gallery/webp/anchorage-open-stud-bay-spray-foam-2.webp"
        alt="Open cell spray foam insulation installation in Anchorage Alaska interior wall"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-charcoal/90 via-charcoal/70 to-charcoal/50"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container-padding max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="animate-fade-in">
          <div class="inline-flex items-center gap-2 bg-orange-500/20 backdrop-blur-sm border border-orange-400/30 rounded-full px-4 py-2 mb-6">
            <span class="text-white font-medium text-sm">Interior Applications Only</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
            Open Cell Spray Foam<br />
            <span class="text-orange-400">Insulation</span>
          </h1>

          <p class="text-xl text-white/90 mb-6 leading-relaxed">
            Premium soundproofing solution for Alaska interior spaces. Open cell spray foam provides exceptional acoustic control for walls, ceilings, and specialized sound-sensitive applications.
          </p>

          <div class="bg-red-900/30 backdrop-blur-sm border border-red-500/30 rounded-2xl p-4 mb-8">
            <h3 class="text-white font-bold mb-2 flex items-center gap-2">
              <span class="text-xl">⚠</span>
              Alaska Climate Warning
            </h3>
            <p class="text-white/90 text-sm">
              <strong>Not recommended for exterior walls, attics, or crawl spaces</strong> in Alaska's climate. Use closed cell foam for these applications to prevent moisture issues.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <GlassButton
              href="#contact-form"
              variant="primary"
              size="lg"
              client:visible
            >
              Get Free Quote
            </GlassButton>
            <GlassButton
              href="tel:+19073103000"
              variant="secondary"
              size="lg"
              client:visible
            >
              Call (907) 310-3000
            </GlassButton>
          </div>

          <!-- Key Stats -->
          <div class="grid grid-cols-3 gap-4">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/20">
              <div class="text-2xl font-bold text-orange-400">R-3.5-4.0</div>
              <div class="text-xs text-white/80">Per Inch</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/20">
              <div class="text-2xl font-bold text-orange-400">Excellent</div>
              <div class="text-xs text-white/80">Sound Control</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center border border-white/20">
              <div class="text-2xl font-bold text-orange-400">Interior</div>
              <div class="text-xs text-white/80">Use Only</div>
            </div>
          </div>
        </div>

        <!-- Image Feature Card -->
        <div class="animate-slide-up">
          <div class="relative bg-white/10 backdrop-blur-md rounded-3xl p-6 border border-white/20 shadow-elegant">
            <div class="absolute inset-0 bg-gradient-to-br from-white/10 via-white/5 to-transparent rounded-3xl"></div>

            <div class="relative aspect-[4/3] rounded-2xl overflow-hidden mb-4">
              <img
                src="/gallery/webp/anchorage-wall-cavity-spray-foam-insulation-2.webp"
                alt="Open cell spray foam for soundproofing in Alaska home"
                class="w-full h-full object-cover"
              />
            </div>

            <h3 class="text-xl font-bold text-white mb-2">Perfect for Interior Soundproofing</h3>
            <p class="text-white/80 text-sm">
              Ideal for reducing noise transmission in homes, offices, and sound-sensitive spaces where acoustic control is the primary concern.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section class="section-padding bg-soft-white">
    <div class="container-padding max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Open Cell Foam Benefits
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          Open cell spray foam offers unique advantages for interior soundproofing and acoustic control applications.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {serviceFeatures.map((feature, index) => (
          <div
            class="animate-slide-up"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-3xl p-6 h-full">
              <h3 class="text-xl font-semibold text-espresso mb-3">{feature.title}</h3>
              <p class="text-warm-gray mb-4">{feature.description}</p>

              <div class="space-y-1">
                {feature.benefits.map((benefit) => (
                  <div class="flex items-start gap-2">
                    <span class="text-orange-500 mt-0.5 flex-shrink-0">✓</span>
                    <span class="text-warm-gray text-sm">{benefit}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Applications Section with Images -->
  <section class="section-padding bg-cream">
    <div class="container-padding max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Ideal Applications
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          Open cell foam excels in interior applications where soundproofing is the primary goal.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {applications.map((app, index) => (
          <div
            class="animate-slide-up"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="bg-white/50 backdrop-blur-sm rounded-3xl overflow-hidden shadow-soft hover:shadow-medium transition-all duration-300 h-full flex flex-col">
              <!-- Image -->
              <div class="relative h-56 overflow-hidden">
                <img
                  src={app.image}
                  alt={`${app.title} with open cell spray foam insulation in Anchorage`}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-charcoal/30 to-transparent"></div>
              </div>

              <!-- Content -->
              <div class="p-6 flex-grow flex flex-col">
                <h3 class="text-xl font-semibold text-espresso mb-3">{app.title}</h3>
                <p class="text-warm-gray mb-4">{app.description}</p>

                <div class="mt-auto">
                  <h4 class="font-medium text-espresso mb-2 text-sm">Ideal For:</h4>
                  <div class="space-y-1">
                    {app.idealFor.map((use) => (
                      <div class="flex items-start gap-2">
                        <span class="text-orange-500 mt-0.5 flex-shrink-0 text-xs">•</span>
                        <span class="text-warm-gray text-sm">{use}</span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  <section class="section-padding bg-gradient-to-br from-orange-50 to-cream">
    <div class="container-padding max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Open Cell vs. Closed Cell Comparison
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          Understanding the differences helps you choose the right foam for your specific application in Alaska.
        </p>
      </div>

      <div class="bg-white/60 backdrop-blur-lg rounded-3xl overflow-hidden shadow-elegant">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-gradient-to-r from-orange-100 to-orange-50">
                <th class="px-6 py-4 text-left text-espresso font-bold">Feature</th>
                <th class="px-6 py-4 text-center text-espresso font-bold">
                  <div class="flex items-center justify-center gap-2">
                    Open Cell (0.5 lb)
                  </div>
                </th>
                <th class="px-6 py-4 text-center text-espresso font-bold">
                  <div class="flex items-center justify-center gap-2">
                    Closed Cell (2.0 lb)
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              {comparisonPoints.map((point, index) => (
                <tr class={index % 2 === 0 ? 'bg-white/40' : 'bg-white/20'}>
                  <td class="px-6 py-4 font-medium text-espresso">{point.feature}</td>
                  <td class={`px-6 py-4 text-center ${point.winner === 'open' ? 'bg-green-50 font-semibold text-green-800' : 'text-warm-gray'}`}>
                    {point.openCell}
                  </td>
                  <td class={`px-6 py-4 text-center ${point.winner === 'closed' ? 'bg-green-50 font-semibold text-green-800' : 'text-warm-gray'}`}>
                    {point.closedCell}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Professional Recommendation -->
      <div class="mt-8 bg-blue-600 rounded-3xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-4">Alaska Professional Recommendation</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h4 class="font-bold mb-2 flex items-center gap-2">
              <span class="text-xl">✓</span>
              Use Open Cell For:
            </h4>
            <ul class="space-y-1 text-sm text-blue-100">
              <li>• Interior walls between rooms</li>
              <li>• Home theater soundproofing</li>
              <li>• Music rooms and studios</li>
              <li>• Multi-family interior walls</li>
              <li>• Office partitions and conference rooms</li>
            </ul>
          </div>
          <div>
            <h4 class="font-bold mb-2 flex items-center gap-2 text-red-300">
              <span class="text-xl">✗</span>
              Avoid Open Cell For:
            </h4>
            <ul class="space-y-1 text-sm text-blue-100">
              <li>• Exterior walls in Alaska climate</li>
              <li>• Attics and roof decks</li>
              <li>• Crawl spaces and basements</li>
              <li>• Any area requiring vapor barrier</li>
              <li>• Below-grade applications</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-soft-white">
    <div class="container-padding max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Open Cell Foam FAQ
        </h2>
        <p class="body-text text-warm-gray">
          Common questions about open cell spray foam insulation in Alaska.
        </p>
      </div>

      <div class="space-y-6">
        {faqs.map((faq, index) => (
          <div
            class="animate-slide-up bg-white/50 backdrop-blur-sm rounded-2xl p-6"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <h3 class="text-lg font-semibold text-espresso mb-3">{faq.question}</h3>
            <p class="text-warm-gray">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-br from-cream to-sand">
    <div class="container-padding max-w-4xl mx-auto text-center">
      <h2 class="heading-md text-espresso mb-6">
        Need Interior Soundproofing?
      </h2>
      <p class="body-text text-warm-gray mb-8 max-w-2xl mx-auto">
        Contact us to discuss your soundproofing needs. We'll help you choose the right foam solution for your Alaska property - open cell for interior soundproofing or closed cell for thermal protection.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <GlassButton
          href="tel:+19073103000"
          variant="primary"
          size="lg"
          client:visible
        >
          Call (907) 310-3000
        </GlassButton>
        <GlassButton
          href="#contact-form"
          variant="secondary"
          size="lg"
          client:visible
        >
          Request Free Consultation
        </GlassButton>
      </div>

      <!-- Trust Indicators -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white/30 backdrop-blur-sm rounded-2xl p-4">
          <div class="text-xl font-bold text-orange-600 mb-1">Expert Guidance</div>
          <div class="text-espresso text-sm">Right foam for your application</div>
        </div>
        <div class="bg-white/30 backdrop-blur-sm rounded-2xl p-4">
          <div class="text-xl font-bold text-orange-600 mb-1">10+ Years Experience</div>
          <div class="text-espresso text-sm">Alaska insulation specialists</div>
        </div>
        <div class="bg-white/30 backdrop-blur-sm rounded-2xl p-4">
          <div class="text-xl font-bold text-orange-600 mb-1">Licensed & Insured</div>
          <div class="text-espresso text-sm">Professional installation</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>

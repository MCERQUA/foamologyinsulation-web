                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Client Types -->
  <section class="section-padding bg-soft-white">
    <div class="container-padding max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Who We Serve
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          Building science consulting tailored to the specific needs of design professionals, contractors, building owners, and legal professionals.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {clientTypes.map((client, index) => (
          <div
            class="animate-slide-up"
            style={`animation-delay: ${index * 0.12}s`}
          >
            <div class="bg-gradient-to-br from-taupe/20 to-khaki/20 rounded-3xl p-8 h-full">
              <h3 class="text-xl font-bold text-espresso mb-4">{client.client}</h3>
              <div class="space-y-3">
                {client.needs.map((need) => (
                  <div class="flex items-start gap-3">
                    <span class="text-sage-mist mt-1 flex-shrink-0 text-lg">✓</span>
                    <span class="text-warm-gray">{need}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


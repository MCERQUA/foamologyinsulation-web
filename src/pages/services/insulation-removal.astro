---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GlassButton from '../../components/ui/GlassButton.tsx';
import wallImage from '@assets/images/wall-ceilings-foam-insulation-arizona-comfort.png';
import atticImage from '@assets/images/attic-spray-foam-insulation-arizona-comfort.png';
import crawlSpaceImage from '@assets/images/crawl-space-foam-insulation-arizona-comfort.png';

const removalServices = [
  {
    title: 'Contaminated Insulation Removal',
    description: 'Safe removal of insulation contaminated by rodents, pests, or other hazards',
    icon: '',
    includes: ['Hazmat containment', 'Safe disposal', 'Decontamination', 'Air quality protection']
  },
  {
    title: 'Wet & Moldy Insulation',
    description: 'Professional removal of moisture-damaged and moldy insulation materials',
    icon: '',
    includes: ['Mold remediation', 'Moisture source identification', 'Prevention measures', 'Health protection']
  },
  {
    title: 'Asbestos-Containing Materials',
    description: 'Licensed asbestos abatement and safe removal of ACM insulation',
    icon: '',
    includes: ['Licensed abatement', 'Proper containment', 'Legal disposal', 'Safety compliance']
  },
  {
    title: 'Fire-Damaged Insulation',
    description: 'Removal and cleanup of fire and smoke-damaged insulation materials',
    icon: '',
    includes: ['Smoke damage cleanup', 'Structural assessment', 'Complete removal', 'Restoration prep']
  }
];

const removalReasons = [
  {
    issue: 'Rodent Infestation',
    description: 'Mice, rats, and other pests can contaminate insulation with droppings, urine, and nesting materials',
    image: atticImage,
    healthRisks: ['Disease transmission', 'Respiratory issues', 'Allergic reactions', 'Odor problems'],
    solution: 'Complete removal and sanitization followed by pest-proofing and new insulation installation'
  },
  {
    issue: 'Water Damage & Mold',
    description: 'Leaks, floods, or condensation can saturate insulation, leading to mold growth and structural damage',
    image: crawlSpaceImage,
    healthRisks: ['Mold exposure', 'Indoor air quality issues', 'Respiratory problems', 'Structural damage'],
    solution: 'Moisture source repair, complete insulation removal, mold remediation, and moisture-resistant replacement'
  },
  {
    issue: 'Asbestos Insulation',
    description: 'Older properties may contain asbestos insulation that poses serious health risks when disturbed',
    image: wallImage,
    healthRisks: ['Lung cancer risk', 'Mesothelioma', 'Asbestosis', 'Respiratory disease'],
    solution: 'Licensed asbestos abatement, safe removal, legal disposal, and modern insulation replacement'
  }
];

const safetyProtocols = [
  {
    protocol: 'Containment Setup',
    description: 'Establish proper containment barriers to prevent contamination spread',
    steps: ['Seal work area', 'Install negative air pressure', 'Create decontamination zones', 'Protect HVAC systems']
  },
  {
    protocol: 'Personal Protection',
    description: 'Full PPE for all workers including respiratory protection',
    steps: ['Hazmat suits', 'Respirators', 'Eye protection', 'Disposable gloves and boots']
  },
  {
    protocol: 'Safe Removal',
    description: 'Careful removal techniques to minimize airborne contamination',
    steps: ['Wet removal methods', 'HEPA vacuum systems', 'Sealed containment bags', 'Continuous air monitoring']
  },
  {
    protocol: 'Proper Disposal',
    description: 'Legal and environmentally responsible waste disposal',
    steps: ['Licensed disposal facilities', 'Proper documentation', 'Transportation compliance', 'Waste tracking']
  }
];

const faqs = [
  {
    question: 'How do I know if my insulation needs to be removed?',
    answer: 'Signs include visible mold growth, pest droppings or nesting, water damage, strange odors, decreased energy efficiency, or if you have pre-1980s insulation that may contain asbestos.'
  },
  {
    question: 'Is insulation removal dangerous?',
    answer: 'It can be dangerous if not done properly. Contaminated insulation can release harmful particles, mold spores, or asbestos fibers. Professional removal with proper safety equipment is essential.'
  },
  {
    question: 'How long does insulation removal take?',
    answer: 'Typical residential projects take 1-3 days depending on contamination level, area size, and access. Commercial projects may take longer based on scope and safety requirements.'
  },
  {
    question: 'What happens after removal?',
    answer: 'We clean and sanitize the area, address any underlying issues (moisture, pest entry points), and prepare the space for new insulation installation if desired.'
  },
  {
    question: 'Do you install new insulation after removal?',
    answer: 'Yes, we provide complete insulation replacement services including modern, high-performance insulation systems designed for Alaska\'s climate.'
  },
  {
    question: 'Is insulation removal covered by insurance?',
    answer: 'Coverage depends on the cause of contamination and your policy. We provide detailed documentation to help with insurance claims for covered events like water damage or fire.'
  }
];
---

<BaseLayout
  title="Professional Insulation Removal Anchorage Alaska - Safe & Licensed"
  description="Safe insulation removal in Anchorage, AK. Licensed professionals handle contaminated, moldy, asbestos insulation removal. Hazmat certified, proper disposal. Free estimates on all removal services."
  keywords="insulation removal Anchorage, asbestos abatement Alaska, contaminated insulation removal, mold insulation removal Anchorage, rodent insulation cleanup Alaska, hazmat insulation removal"
>
  <!-- Hero Section -->
  <section class="relative min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-cream via-sand to-sand-dark overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <img
        src={wallImage.src}
        alt="Professional insulation removal team working safely in Anchorage Alaska"
        class="w-full h-full object-cover opacity-20"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-cream/80 to-sand/60"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container-padding max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="animate-fade-in">
          <h1 class="heading-xl text-espresso mb-6 text-shadow">
            Safe Professional Insulation Removal
          </h1>
          <p class="body-text text-warm-gray mb-6">
            Licensed insulation removal services in Anchorage, Alaska. We safely remove contaminated, moldy, wet, or hazardous insulation materials using proper safety protocols and disposal methods.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <GlassButton
              href="#contact-form"
              variant="primary"
              size="lg"
              client:visible
            >
              Get Free Assessment
            </GlassButton>
            <GlassButton
              href="tel:+19073103000"
              variant="secondary"
              size="lg"
              client:visible
            >
              Emergency: (907) 310-3000
            </GlassButton>
          </div>

          <!-- Key Credentials -->
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/30 backdrop-blur-sm rounded-xl p-4 text-center">
              <div class="text-xl font-bold text-terra-cotta">Licensed</div>
              <div class="text-sm text-espresso">Hazmat Certified</div>
            </div>
            <div class="bg-white/30 backdrop-blur-sm rounded-xl p-4 text-center">
              <div class="text-xl font-bold text-terra-cotta">Insured</div>
              <div class="text-sm text-espresso">Bonded & Protected</div>
            </div>
          </div>
        </div>

        <!-- Service Image -->
        <div class="animate-slide-up">
          <div class="relative rounded-3xl overflow-hidden shadow-elegant">
            <img
              src={wallImage.src}
              alt="Safe insulation removal process with proper containment in Alaska"
              class="w-full h-auto"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal/20 to-transparent"></div>

            <!-- Safety Badge -->
            <div class="absolute top-4 right-4 bg-terra-cotta/90 backdrop-blur-sm text-white px-3 py-2 rounded-full text-sm font-medium">
              Safety First
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- When Removal is Needed -->
  <section class="section-padding bg-soft-white">
    <div class="container-padding max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          When Insulation Removal is Necessary
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          Contaminated or damaged insulation poses serious health and safety risks. Professional removal protects your family and property.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {removalReasons.map((reason, index) => (
          <div
            class="animate-slide-up"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="bg-gradient-to-br from-taupe/10 to-khaki/10 rounded-3xl overflow-hidden shadow-soft hover:shadow-medium transition-all duration-300 h-full flex flex-col">
              <!-- Image -->
              <div class="relative h-48 overflow-hidden">
                <img
                  src={reason.image.src}
                  alt={`${reason.issue} insulation removal in Anchorage Alaska`}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-charcoal/40 to-transparent"></div>

                <!-- Issue Title Overlay -->
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="text-xl font-bold text-white text-shadow-dark">{reason.issue}</h3>
                </div>
              </div>

              <!-- Content -->
              <div class="p-6 flex-grow flex flex-col">
                <p class="text-warm-gray mb-4">{reason.description}</p>

                <!-- Health Risks -->
                <div class="mb-4">
                  <h4 class="font-semibold text-espresso mb-2 text-red-600">Health Risks:</h4>
                  <div class="space-y-1">
                    {reason.healthRisks.map((risk) => (
                      <div class="flex items-start gap-2">
                        <span class="text-red-500 mt-0.5 flex-shrink-0 text-sm">⚠</span>
                        <span class="text-warm-gray text-sm">{risk}</span>
                      </div>
                    ))}
                  </div>
                </div>

                <!-- Solution -->
                <div class="mb-6 flex-grow">
                  <h4 class="font-semibold text-espresso mb-2">Our Solution:</h4>
                  <p class="text-warm-gray text-sm">{reason.solution}</p>
                </div>

                <!-- CTA Button -->
                <GlassButton
                  href="#contact-form"
                  variant="primary"
                  size="md"
                  class="w-full mt-auto"
                  client:visible
                >
                  Get Emergency Assessment
                </GlassButton>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Services -->
  <section class="section-padding bg-cream">
    <div class="container-padding max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Professional Removal Services
        </h2>
        <p class="body-text text-warm-gray max-w-3xl mx-auto">
          We handle all types of contaminated and hazardous insulation removal with the highest safety standards.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {removalServices.map((service, index) => (
          <div
            class="animate-slide-up text-center"
            style={`animation-delay: ${index * 0.15}s`}
          >
            <div class="bg-white/50 backdrop-blur-sm rounded-3xl p-6 h-full">
              <h3 class="text-lg font-semibold text-espresso mb-3">{service.title}</h3>
              <p class="text-warm-gray text-sm mb-4">{service.description}</p>

              <div class="space-y-2">
                <h4 class="font-medium text-espresso text-sm">Includes:</h4>
                {service.includes.map((item) => (
                  <div class="flex items-center justify-center gap-2 text-xs">
                    <span class="text-terra-cotta">✓</span>
                    <span class="text-warm-gray">{item}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Safety Protocols -->
  <section class="section-padding bg-soft-white">
    <div class="container-padding max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Our Safety Protocols
        </h2>
        <p class="body-text text-warm-gray max-w-2xl mx-auto">
          We follow strict safety protocols to protect workers, occupants, and the environment during insulation removal.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {safetyProtocols.map((protocol, index) => (
          <div
            class="animate-slide-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="bg-gradient-to-br from-taupe/20 to-khaki/20 rounded-2xl p-6 h-full">
              <div class="w-12 h-12 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold">
                {index + 1}
              </div>
              <h3 class="text-lg font-semibold text-espresso mb-3 text-center">{protocol.protocol}</h3>
              <p class="text-warm-gray text-sm mb-4 text-center">{protocol.description}</p>

              <div class="space-y-1">
                {protocol.steps.map((step) => (
                  <div class="flex items-start gap-2">
                    <span class="text-terra-cotta mt-0.5 flex-shrink-0 text-xs">•</span>
                    <span class="text-warm-gray text-xs">{step}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="section-padding bg-gradient-to-br from-taupe/10 to-khaki/10">
    <div class="container-padding max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Our Removal Process
        </h2>
        <p class="body-text text-warm-gray max-w-2xl mx-auto">
          Professional insulation removal following industry best practices and safety standards.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white text-lg font-bold">1</div>
          <h3 class="text-lg font-semibold text-espresso mb-2">Assessment</h3>
          <p class="text-warm-gray text-sm">Evaluate contamination type, extent, and safety requirements</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white text-lg font-bold">2</div>
          <h3 class="text-lg font-semibold text-espresso mb-2">Containment</h3>
          <p class="text-warm-gray text-sm">Set up proper containment barriers and negative air pressure</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white text-lg font-bold">3</div>
          <h3 class="text-lg font-semibold text-espresso mb-2">Safe Removal</h3>
          <p class="text-warm-gray text-sm">Careful removal using proper techniques and equipment</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white text-lg font-bold">4</div>
          <h3 class="text-lg font-semibold text-espresso mb-2">Cleanup</h3>
          <p class="text-warm-gray text-sm">Thorough cleaning and decontamination of work area</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-terra-cotta rounded-full flex items-center justify-center mx-auto mb-4 text-white text-lg font-bold">5</div>
          <h3 class="text-lg font-semibold text-espresso mb-2">Disposal</h3>
          <p class="text-warm-gray text-sm">Legal disposal at licensed facilities with documentation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-cream">
    <div class="container-padding max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="heading-lg text-espresso mb-4">
          Insulation Removal FAQ
        </h2>
        <p class="body-text text-warm-gray">
          Common questions about safe insulation removal in Alaska.
        </p>
      </div>

      <div class="space-y-6">
        {faqs.map((faq, index) => (
          <div
            class="animate-slide-up bg-white/50 backdrop-blur-sm rounded-2xl p-6"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <h3 class="text-lg font-semibold text-espresso mb-3">{faq.question}</h3>
            <p class="text-warm-gray">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="section-padding bg-gradient-to-br from-red-50 to-orange-50">
    <div class="container-padding max-w-4xl mx-auto text-center">
      <div class="bg-white/60 backdrop-blur-sm rounded-3xl p-8">
        <h2 class="heading-md text-espresso mb-4">
          Emergency Insulation Removal?
        </h2>
        <p class="body-text text-warm-gray mb-6 max-w-2xl mx-auto">
          If you've discovered contaminated insulation, don't wait. Contact us immediately for emergency assessment and safe removal services.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
          <GlassButton
            href="tel:+19073103000"
            variant="primary"
            size="lg"
            client:visible
          >
            Emergency: (907) 310-3000
          </GlassButton>
          <GlassButton
            href="#contact-form"
            variant="secondary"
            size="lg"
            client:visible
          >
            Request Assessment
          </GlassButton>
        </div>

        <!-- Trust Indicators -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white/40 backdrop-blur-sm rounded-2xl p-4">
            <div class="text-lg font-bold text-terra-cotta mb-1">24/7 Emergency</div>
            <div class="text-espresso text-sm">Available for urgent situations</div>
          </div>
          <div class="bg-white/40 backdrop-blur-sm rounded-2xl p-4">
            <div class="text-lg font-bold text-terra-cotta mb-1">Licensed & Certified</div>
            <div class="text-espresso text-sm">Hazmat and asbestos certified</div>
          </div>
          <div class="bg-white/40 backdrop-blur-sm rounded-2xl p-4">
            <div class="text-lg font-bold text-terra-cotta mb-1">Safe Disposal</div>
            <div class="text-espresso text-sm">Proper legal disposal methods</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>
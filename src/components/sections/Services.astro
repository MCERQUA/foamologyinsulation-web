---
import GlassCard from '../ui/GlassCard.tsx';
import GlassButton from '../ui/GlassButton.tsx';
import atticImage from '@assets/images/attic-spray-foam-insulation-arizona-comfort.png';
import crawlSpaceImage from '@assets/images/crawl-space-foam-insulation-arizona-comfort.png';
import wallImage from '@assets/images/wall-ceilings-foam-insulation-arizona-comfort.png';

const services = [
  {
    title: 'Attic Insulation',
    description: 'Complete attic insulation solutions tailored for Alaska\'s harsh climate.',
    features: ['Energy savings up to 40%', 'Professional installation', 'Premium materials'],
    image: atticImage
  },
  {
    title: 'Closed Cell Spray Foam',
    description: 'High-performance closed cell spray foam insulation for maximum R-value.',
    features: ['Superior air sealing', 'Moisture barrier', 'Structural support'],
    image: crawlSpaceImage
  },
  {
    title: 'Thermal Inspections',
    description: 'Professional thermal imaging to identify energy loss areas.',
    features: ['Identify problem areas', 'Energy efficiency analysis', 'Detailed reporting'],
    image: wallImage
  }
];
---

<section class="section-padding bg-cream" id="services">
  <div class="container-padding max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="heading-lg text-espresso mb-4">
        Our Services
      </h2>
      <p class="body-text text-warm-gray max-w-2xl mx-auto">
        Professional spray foam and insulation solutions tailored to Alaska homes
      </p>
    </div>
    
    <div class="grid grid-cols-3 gap-3 sm:gap-4 md:gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div 
          class="animate-slide-up" 
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Modern card with darker background and shadow -->
          <div class="
            group relative h-full
            bg-taupe/40 
            rounded-2xl sm:rounded-3xl p-2 sm:p-3 md:p-4
            shadow-lg hover:shadow-xl 
            transition-all duration-500 
            transform hover:-translate-y-1
            overflow-hidden
          ">
            <!-- Glass effect border -->
            <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent rounded-3xl"></div>
            
            <!-- Inner container -->
            <div class="relative h-full flex flex-col">
              <!-- Service Image -->
              <div class="relative mb-2 sm:mb-3 md:mb-4 overflow-hidden rounded-xl sm:rounded-2xl aspect-[4/3]">
                <img 
                  src={service.image.src} 
                  alt={`${service.title} service`}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
                <!-- Subtle overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-charcoal/30 to-transparent opacity-40"></div>
              </div>
              
              <!-- Content container - mobile-optimized sizing -->
              <div class="bg-soft-white rounded-xl sm:rounded-2xl p-2 sm:p-4 md:p-5 lg:p-6 flex-grow shadow-inner">
                <div class="space-y-2 sm:space-y-3 md:space-y-4">
                  <h3 class="text-sm sm:text-lg md:text-xl lg:text-2xl font-bold text-espresso leading-tight">
                    {service.title}
                  </h3>
                  
                  <p class="text-warm-gray text-xs sm:text-sm md:text-base leading-relaxed hidden sm:block">
                    {service.description}
                  </p>
                  
                  <div class="pt-1 sm:pt-2">
                    <ul class="space-y-1 sm:space-y-2">
                      {service.features.map((feature) => (
                        <li class="flex items-start gap-1 sm:gap-2 md:gap-3">
                          <span class="text-terra-cotta mt-0.5 flex-shrink-0 text-xs sm:text-sm">âœ“</span>
                          <span class="text-warm-gray text-xs sm:text-sm md:text-sm">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-16">
      <p class="text-warm-gray mb-6 text-lg">
        Ready to improve your home's comfort and efficiency?
      </p>
      <GlassButton 
        href="#contact-form"
        variant="primary"
        size="lg"
        client:visible
      >
        Get Your Free Estimate
      </GlassButton>
    </div>
  </div>
</section>

<style>
  /* Ensure consistent card heights */
  .grid > div {
    display: flex;
  }
  
  .grid > div > div {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  /* Enhanced shadow effects */
  .shadow-lg {
    box-shadow: 0 10px 25px -5px rgba(74, 63, 54, 0.3), 0 10px 10px -5px rgba(74, 63, 54, 0.15);
  }
  
  .shadow-xl:hover {
    box-shadow: 0 20px 35px -5px rgba(74, 63, 54, 0.35), 0 15px 15px -5px rgba(74, 63, 54, 0.2);
  }
  
  /* Smooth animations */
  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }
</style>

---
// Import components with proper paths
import GlassButton from '../ui/GlassButton.tsx';
import LogoScroller from '../ui/LogoScroller.tsx';
---

<section 
  class="relative min-h-screen flex items-center overflow-hidden"
>
  <!-- Static Hero Background -->
  <div 
    class="absolute inset-0 z-0"
    style="background-image: url('/images/hero2.jpg'); background-size: cover; background-repeat: no-repeat;"
  >
    <!-- Responsive background positioning -->
    <style>
      @media (max-width: 768px) {
        section > div:first-child {
          background-position: center center !important; /* Center the mountain landscape on mobile */
        }
      }
      @media (min-width: 769px) {
        section > div:first-child {
          background-position: center center !important; /* Center the mountain landscape on desktop */
        }
      }
    </style>
    <!-- Enhanced gradient overlay for better text readability and visual depth -->
    <div class="absolute inset-0 bg-gradient-to-br from-charcoal/50 via-charcoal/30 via-transparent to-charcoal/20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-charcoal/60 via-transparent to-transparent"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 w-full px-6 md:px-12 lg:px-16 pb-32 pt-8 md:pt-12">
    <div class="max-w-7xl mx-auto text-center">
      <div class="animate-fade-in">
        <!-- Logo above hero text -->
        <div class="-mb-2 md:-mb-4">
          <a href="/" class="inline-block">
            <img 
              src="/images/logos/foamology-logo.png" 
              alt="Foamology Insulation" 
              class="h-72 sm:h-80 md:h-96 lg:h-[500px] xl:h-[600px] w-auto mx-auto transition-all duration-500 hover:scale-105 cursor-pointer"
              style="
                filter: brightness(1.2) drop-shadow(0 0 20px rgba(255, 255, 255, 0.4)) drop-shadow(0 0 40px rgba(255, 255, 255, 0.2)) drop-shadow(0 0 60px rgba(255, 255, 255, 0.6));
              "
            />
          </a>
        </div>
        
        <!-- Centered hero title -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold mb-6 text-soft-white" style="text-shadow: 4px 4px 12px rgba(0, 0, 0, 0.8), 0 0 30px rgba(0, 0, 0, 0.6), 0 0 50px rgba(255, 255, 255, 0.2);">
          Anchorage
          <br />
          Insulation
          <br />
          <span class="text-soft-white/90">Experts</span>
        </h1>
        
        <!-- Centered subtext -->
        <p class="text-lg sm:text-xl lg:text-2xl text-soft-white/90 mb-8 max-w-3xl mx-auto font-medium" style="text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.7), 0 0 25px rgba(0, 0, 0, 0.5), 0 0 40px rgba(255, 255, 255, 0.15);">
          Comprehensive insulation inspections and tailored spray foam solutions for Alaska's extreme climate. Licensed, bonded & insured professionals serving Anchorage and surrounding areas.
        </p>
        
        <!-- Centered button -->
        <div class="flex justify-center">
          <GlassButton 
            href="#contact-form" 
            size="lg"
            variant="primary"
            client:load
          >
            Get My Free Estimate
          </GlassButton>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements - using warm tones -->
    <div class="absolute top-1/4 -left-20 w-40 h-40 bg-terra-cotta/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 -right-20 w-60 h-60 bg-khaki/10 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
  </div>
  
  <!-- Logo Scroller -->
  <LogoScroller client:visible />
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-32 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-soft-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-soft-white/50 rounded-full mt-2"></div>
    </div>
  </div>
</section>

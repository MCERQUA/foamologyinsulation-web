---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { label: 'About', href: '#about' },
    { label: 'Services', href: '#services' },
    { label: 'Blog', href: '/blog' },
  ],
  support: [
    { label: 'Contact', href: '#contact-form' },
    { label: 'FAQ', href: '#' },
    { label: 'Privacy', href: '#' },
  ],
  social: [
    { label: 'Facebook', href: 'https://www.facebook.com/61566246782622' },
  ]
};
---

<footer class="relative bg-charcoal text-soft-white py-16">
  <!-- Subtle background pattern -->
  <div 
    class="absolute inset-0 opacity-5"
    style="background-image: url('/images/footer-bg-small.png'); background-repeat: repeat; background-size: 100px 100px;"
  ></div>
  <div class="relative z-10 container-padding max-w-7xl mx-auto">
    <!-- Massive Logo Section -->
    <div class="text-center mb-12">
      <a href="/" class="inline-block">
        <img 
          src="/images/logos/foamology-logo.png" 
          alt="Foamology Insulation" 
          class="h-72 sm:h-80 md:h-96 lg:h-[500px] xl:h-[600px] w-auto mx-auto transition-all duration-500 hover:scale-105 cursor-pointer"
          style="
            filter: brightness(1.2) drop-shadow(0 0 20px rgba(255, 255, 255, 0.4)) drop-shadow(0 0 40px rgba(255, 255, 255, 0.2)) drop-shadow(0 0 60px rgba(255, 255, 255, 0.6));
          "
        />
      </a>
      <p class="text-cream/80 text-base sm:text-lg md:text-xl max-w-2xl mx-auto mt-6 font-medium">
        Professional spray foam and insulation solutions for Alaska homes.
      </p>
    </div>

    <!-- 3-Column Layout for Mobile and Desktop -->
    <div class="grid grid-cols-3 gap-4 sm:gap-6 md:gap-8 mb-12">
      <!-- Company Links -->
      <div class="text-center">
        <h3 class="font-semibold mb-4 text-cream text-sm sm:text-base">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-xs sm:text-sm block"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Support Links -->
      <div class="text-center">
        <h3 class="font-semibold mb-4 text-cream text-sm sm:text-base">Support</h3>
        <ul class="space-y-2">
          {footerLinks.support.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-xs sm:text-sm block"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social Links -->
      <div class="text-center">
        <h3 class="font-semibold mb-4 text-cream text-sm sm:text-base">Connect</h3>
        <ul class="space-y-2">
          {footerLinks.social.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-xs sm:text-sm block"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Contact Information -->
    <div class="text-center mb-8">
      <a 
        href="tel:+19073103000" 
        class="inline-block text-2xl sm:text-3xl md:text-4xl font-bold text-cream hover:text-soft-white transition-colors duration-300 mb-2"
      >
        (907) 310-3000
      </a>
      <p class="text-cream/60 text-sm sm:text-base">
        Serving Anchorage, Palmer, Wasilla & Kenai Peninsula
      </p>
    </div>
    
    <!-- Divider -->
    <div class="border-t border-cream/20 pt-8">
      <div class="flex flex-col items-center gap-4 text-center">
        <p class="text-cream/50 text-xs sm:text-sm">
          © {currentYear} Foamology Insulation. All rights reserved.
        </p>
        <p class="text-cream/50 text-xs sm:text-sm font-medium">
          Licensed • Bonded • Insured • ROC #123456
        </p>
      </div>
    </div>
  </div>
</footer>

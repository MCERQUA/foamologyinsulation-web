<!-- Modern Professional Footer -->
<footer class="relative bg-gradient-to-br from-soft-white via-cream to-sand text-espresso overflow-hidden">
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div

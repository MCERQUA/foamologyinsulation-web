---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { label: 'About', href: '#about' },
    { label: 'Services', href: '#services' },
    { label: 'Blog', href: '/blog' },
  ],
  support: [
    { label: 'Contact', href: '#contact-form' },
    { label: 'FAQ', href: '#' },
    { label: 'Privacy', href: '#' },
  ],
  social: [
    { label: 'Facebook', href: 'https://www.facebook.com/61566246782622' },
  ]
};
---

<footer class="bg-charcoal text-soft-white py-16">
  <div class="container-padding max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="space-y-4">
        <a href="/" class="inline-block">
          <img 
            src="/images/logos/foamology-logo.png" 
            alt="Foamology Insulation" 
            class="h-16 w-auto brightness-110"
          />
        </a>
        <p class="text-cream/70 text-sm">
          Professional spray foam and insulation solutions for Alaska homes.
        </p>
      </div>
      
      <!-- Company Links -->
      <div>
        <h3 class="font-semibold mb-4 text-cream">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Support Links -->
      <div>
        <h3 class="font-semibold mb-4 text-cream">Support</h3>
        <ul class="space-y-2">
          {footerLinks.support.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social Links -->
      <div>
        <h3 class="font-semibold mb-4 text-cream">Connect</h3>
        <ul class="space-y-2">
          {footerLinks.social.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-cream/60 hover:text-cream transition-colors duration-300 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="border-t border-cream/20 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-cream/50 text-sm">
          © {currentYear} Foamology Insulation. All rights reserved.
        </p>
        <p class="text-cream/50 text-sm">
          Licensed • Bonded • Insured
        </p>
      </div>
    </div>
  </div>
</footer>

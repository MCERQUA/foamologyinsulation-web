    ></div>
  </div>

  <!-- Top Section with Logo and CTA -->
  <div class="relative z-10 border-b border-khaki/20">
    <div class="container-padding max-w-7xl mx-auto py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Logo and Company Info -->
        <div class="text-center lg:text-left">
          <a href="/" class="inline-block mb-6">
            <img
              src="/images/logos/foamology-logo.png"
              alt="Foamology Insulation - Alaska's Premier Insulation Contractor"
              class="h-20 w-auto transition-all duration-300 hover:scale-105"
            />
          </a>
          <h3 class="text-2xl font-bold text-espresso mb-4">
            Alaska's Premier Insulation Contractor
          </h3>
          <p class="text-warm-gray text-lg leading-relaxed mb-6">
            Professional spray foam insulation, thermal inspections, and ice dam prevention solutions. Licensed, bonded & insured with over 10 years serving Alaska homeowners.
          </p>

          <!-- Trust Badges -->
          <div class="flex flex-wrap justify-center lg:justify-start gap-4">

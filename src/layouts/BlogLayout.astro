---
import BaseLayout from './BaseLayout.astro';
import GlassCard from '../components/ui/GlassCard.tsx';
import TableOfContents from '../components/blog/TableOfContents.tsx';
import SocialShare from '../components/blog/SocialShare.tsx';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author?: string;
  tags?: string[];
  readTime?: string;
  featuredImage?: string;
}

const {
  title,
  description,
  pubDate,
  author = 'Foamology Insulation Team',
  tags = [],
  readTime = '5 min read',
  featuredImage = '/images/spray-foam-insulation-blog.png'
} = Astro.props;

// Get current URL for social sharing
const currentUrl = `https://foamologyinsulation.com${Astro.url.pathname}`;

// Schema.org structured data for SEO
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": featuredImage,
  "datePublished": pubDate.toISOString(),
  "dateModified": pubDate.toISOString(),
  "author": {
    "@type": author === 'Mike Cerqua, Owner' ? "Person" : "Organization",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Foamology Insulation",
    "logo": {
      "@type": "ImageObject",
      "url": "https://foamologyinsulation.com/logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": currentUrl
  }
};
---

<BaseLayout
  title={title}
  description={description}
  keywords="insulation blog, spray foam tips, Alaska insulation, energy efficiency, home insulation advice"
  ogImage={featuredImage}
>
  <!-- SEO: Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} slot="head" />
  <article class="relative min-h-screen pt-32 pb-16 overflow-hidden">
    <!-- Background image -->
    <div 
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style="background-image: url('/images/blog-background.jpg')"
    ></div>
    
    <!-- Alaska glacier gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-sage-mist/20 via-sage-mist/10 to-sage-mist/5"></div>
    
    <!-- Additional subtle pattern overlay -->
    <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.3\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>
    <div class="relative z-10 container-padding max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-8">
          <!-- Blog Header -->
          <header class="mb-12">
            <h1 class="heading-xl text-espresso mb-6">
              {title}
            </h1>

            <div class="flex flex-wrap items-center gap-4 text-sm text-warm-gray">
              <span>By {author}</span>
              <span class="text-khaki">•</span>
              <time datetime={pubDate.toISOString()}>
                {new Date(pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              <span class="text-khaki">•</span>
              <span>{readTime}</span>
            </div>

            {tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="px-3 py-1 bg-sand/30 rounded-full text-xs font-medium text-taupe">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </header>

          <!-- Blog Content -->
          <GlassCard client:visible variant="white">
            <article class="prose prose-lg max-w-none
              prose-headings:text-espresso prose-headings:scroll-mt-32
              prose-h2:text-3xl prose-h2:font-bold prose-h2:mb-4 prose-h2:mt-8
              prose-h3:text-2xl prose-h3:font-semibold prose-h3:mb-3 prose-h3:mt-6
              prose-h4:text-xl prose-h4:font-semibold prose-h4:mb-2 prose-h4:mt-4
              prose-p:text-warm-gray prose-p:leading-relaxed prose-p:mb-4
              prose-a:text-terra-cotta hover:prose-a:text-terra-cotta/80 prose-a:no-underline hover:prose-a:underline
              prose-strong:text-espresso prose-strong:font-semibold
              prose-code:text-terra-cotta prose-code:bg-cream prose-code:px-1 prose-code:rounded prose-code:text-sm
              prose-pre:bg-cream prose-pre:border prose-pre:border-sand prose-pre:rounded-xl
              prose-blockquote:border-l-4 prose-blockquote:border-terra-cotta prose-blockquote:text-warm-gray prose-blockquote:italic prose-blockquote:pl-4 prose-blockquote:py-2
              prose-ul:text-warm-gray prose-ul:my-4
              prose-ol:text-warm-gray prose-ol:my-4
              prose-li:my-2
              prose-img:rounded-2xl prose-img:shadow-lg
            ">
              <slot />
            </article>

            <!-- Social Share -->
            <SocialShare
              title={title}
              url={currentUrl}
              description={description}
              client:visible
            />
          </GlassCard>

          <!-- Related Posts / Back to Blog -->
          <div class="mt-12 flex justify-between items-center">
            <a
              href="/blog"
              class="inline-flex items-center gap-2 text-terra-cotta hover:text-terra-cotta/80 transition-colors duration-300 font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Back to Blog
            </a>

            <a
              href="/contact"
              class="inline-flex items-center gap-2 text-terra-cotta hover:text-terra-cotta/80 transition-colors duration-300 font-medium"
            >
              Get a Free Quote
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Sidebar: Table of Contents -->
        <aside class="lg:col-span-4">
          <TableOfContents client:load />
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>
